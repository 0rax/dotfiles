{
    // === VSCode ===
    // Breadcrumbs
    "breadcrumbs.enabled": true,
    "breadcrumbs.showFunctions": true,
    "breadcrumbs.filePath": "last",
    "breadcrumbs.showVariables": false,
    // Editor
    "editor.cursorBlinking": "solid",
    "editor.cursorStyle": "block",
    "editor.detectIndentation": false,
    "editor.fontFamily": "'Hasklug Nerd Font', 'Hasklig', 'Font Awesome 5 Brands', 'Font Awesome 5 Free Solid', Monaco, monofur, Menlo, monospace",
    "editor.fontLigatures": true,
    "editor.insertSpaces": true,
    "editor.minimap.enabled": false,
    "editor.renderLineHighlight": "all",
    "editor.renderWhitespace": "boundary",
    "editor.rulers": [
        80
    ],
    "editor.scrollBeyondLastLine": false,
    "editor.tabSize": 4,
    "editor.wordWrap": "on",
    // Outline
    "outline.showVariables": false,
    // Explorer
    "explorer.compactFolders": true,
    "explorer.confirmDelete": false,
    "explorer.confirmDragAndDrop": false,
    "extensions.ignoreRecommendations": true,
    // Files
    "files.associations": {
        "*.pgsql": "sql",
        "APKBUILD": "shellscript",
        "bashrc": "sheelscript",
        "Brewfile": "ruby",
        "Dockerfile.*": "dockerfile",
        "ssh_config": "ssh_config",
        "Makefile.*": "makefile"
    },
    "files.autoSave": "onFocusChange",
    "files.exclude": {
        "**/__pycache__": true,
        "**/.snapshots": true,
        "**/.vscode": true,
        "**/*.code-workspace": true
    },
    "files.insertFinalNewline": true,
    "files.trimFinalNewlines": true,
    "files.trimTrailingWhitespace": true,
    // Git integration (disabled)
    "git.autofetch": false,
    "git.enabled": false,
    "git.ignoreLimitWarning": true,
    // Search
    "search.exclude": {
        "**/vendor": true
    },
    // Telemetry
    "telemetry.enableCrashReporter": false,
    "telemetry.enableTelemetry": false,
    // Terminal
    "terminal.integrated.copyOnSelection": true,
    "terminal.integrated.fontSize": 14,
    "terminal.integrated.shell.linux": "/usr/bin/fish",
    // Window
    "window.menuBarVisibility": "toggle",
    "window.restoreWindows": "one",
    // Workbench
    "workbench.editor.limit.enabled": true,
    "workbench.editor.limit.perEditorGroup": true,
    "workbench.editor.limit.value": 5,
    "workbench.editor.revealIfOpen": true,
    "workbench.settings.editor": "json",
    "workbench.colorTheme": "Ocean Dark Extended",
    "workbench.colorCustomizations": {
        "statusBar.background": "#16181D",
        "statusBar.noFolderBackground": "#16181D"
    },
    "workbench.iconTheme": "file-icons",
    "workbench.startupEditor": "none",
    "zenMode.fullScreen": false,
    // === Addons ===
    // Vim Mode
    "amVim.bindCtrlCommands": false,
    // Custom Highlighter
    "better-comments.highlightPlainText": false,
    "better-comments.multilineComments": true,
    "better-comments.tags": [
        {
            "tag": "!",
            "color": "#FF2D00",
            "strikethrough": false,
            "backgroundColor": "transparent"
        },
        {
            "tag": "?",
            "color": "#3498DB",
            "strikethrough": false,
            "backgroundColor": "transparent"
        },
        {
            "tag": "//",
            "color": "#474747",
            "strikethrough": true,
            "backgroundColor": "transparent"
        },
        {
            "tag": "*",
            "color": "#98C379",
            "strikethrough": false,
            "backgroundColor": "transparent"
        },
        {
            "tag": "note",
            "color": "#98C379",
            "strikethrough": false,
            "backgroundColor": "transparent"
        },
        {
            "tag": "todo",
            "color": "#FF8C00",
            "strikethrough": false,
            "backgroundColor": "transparent"
        },
        {
            "tag": "fixme",
            "color": "#FF8C00",
            "strikethrough": false,
            "backgroundColor": "transparent"
        }
    ],
    "bracket-pair-colorizer-2.showBracketsInGutter": true,
    "bracket-pair-colorizer-2.showHorizontalScopeLine": false,
    "bracket-pair-colorizer-2.showBracketsInRuler": true,
    "bracket-pair-colorizer-2.rulerPosition": "Left",
    "bracket-pair-colorizer-2.highlightActiveScope": true,
    // === Languages setup ===
    // Text
    "[markdown]": {
        "editor.defaultFormatter": "esbenp.prettier-vscode",
        "editor.tabSize": 2
    },
    // Makefile
    "[makefile]": {
        "editor.insertSpaces": false,
        "editor.tabSize": 8
    },
    // Web
    "[html]": {
        "editor.defaultFormatter": "vscode.html-language-features"
    },
    "[javascript]": {
        "editor.insertSpaces": true,
        "editor.tabSize": 2,
        "editor.defaultFormatter": "esbenp.prettier-vscode",
    },
    "[json]": {
        "editor.insertSpaces": true,
        "editor.tabSize": 2,
        "editor.defaultFormatter": "esbenp.prettier-vscode"
    },
    "[vue]": {
        "editor.insertSpaces": true,
        "editor.tabSize": 2,
        "editor.defaultFormatter": "esbenp.prettier-vscode",
        "editor.formatOnSave": true
    },
    // DevOps
    "[dockerfile]": {
        "editor.defaultFormatter": "ms-azuretools.vscode-docker"
    },
    "[dockercompose]": {
        "editor.insertSpaces": true,
        "editor.tabSize": 2
    },
    "[jsonc]": {
        "editor.defaultFormatter": "vscode.json-language-features",
        "editor.formatOnSave": true
    },
    "[properties]": {
        "editor.insertSpaces": false,
        "editor.tabSize": 4
    },
    "[css]": {
        "editor.insertSpaces": false,
        "editor.tabSize": 8,
    },
    "[shellscript]": {
        "editor.insertSpaces": true,
        "editor.tabSize": 4
    },
    "[toml]": {
        "editor.insertSpaces": true,
        "editor.tabSize": 2
    },
    // Golang
    "[proto3]": {
        "editor.formatOnSave": true,
        "editor.defaultFormatter": "xaver.clang-format"
    },
    "[go]": {},
    "go.gopath": "/home/orax/projects/go",
    "go.inferGopath": true,
    "go.toolsGopath": "/home/orax/projects/go",
    "go.useLanguageServer": true,
    "gopls": {
        "formatting.local": "github.com/moneway"
    },
    "go.vetOnSave": "package",
    "go.testFlags": [
        "-gcflags=-l"
    ],
    "go.formatTool": "goimports",
    "go.formatFlags": [
        "-local=github.com/moneway"
    ],
    "go.lintTool": "golangci-lint",
    "groupImports.onSave": true,
    // YAML
    "yaml.format.enable": false,
    "yaml.customTags": [
        // CloudFormation tags
        "!And",
        "!If",
        "!Not",
        "!Equals",
        "!Or",
        "!FindInMap",
        "!Base64",
        "!Cidr",
        "!Ref",
        "!Sub",
        "!GetAtt",
        "!GetAZs",
        "!ImportValue",
        "!Select",
        "!Split",
        "!Join",
        // Sceptre tags
        "!environment_variable",
        "!file_contents",
        "!stack_output",
        "!stack_output_external",
        "!cmd",
        "!asg_scaling_processes"
    ],
    "[yaml]": {
        "editor.defaultFormatter": "esbenp.prettier-vscode"
    },
    "indentRainbow.includedLanguages": [
        "python",
        "yaml"
    ],
    "indentRainbow.excludedLanguages": [
        "*"
    ],
    // Markdown
    "markdown.extension.tableFormatter.normalizeIndentation": true,
    "markdown.preview.scrollEditorWithPreview": false,
    // Python
    "python.venvPath": "~/.pyenv/versions/",
    "python.formatting.provider": "black",
    "python.languageServer": "Jedi",
    "python.linting.enabled": true,
    "python.linting.flake8Args": [
        "--max-line-length=100",
        "--ignore=E501,W503"
    ],
    "python.linting.flake8Enabled": true,
    "python.linting.pylintEnabled": false,
    // Shell
    "shellcheck.customArgs": [
        "-x"
    ],
    "shellcheck.run": "onSave",
    "[fish]": {
        "editor.insertSpaces": true,
        "editor.tabSize": 4
    },
    // MJML
    "[mjml]": {
        "editor.insertSpaces": true,
        "editor.tabSize": 2,
        "editor.defaultFormatter": "attilabuti.vscode-mjml"
    },
    // Text
    "spellright.documentTypes": [
        "markdown",
        "latex",
        "plaintext"
    ],
    "spellright.language": [
        "en"
    ],
    "workbench.editorAssociations": [
        {
            "viewType": "jupyter.notebook.ipynb",
            "filenamePattern": "*.ipynb"
        }
    ],
    "go.toolsManagement.autoUpdate": true,
    // === End of file ===
}
